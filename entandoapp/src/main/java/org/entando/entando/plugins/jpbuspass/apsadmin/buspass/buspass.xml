<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
    <package name="jpbuspass_do/jpbuspass/Buspass" namespace="/do/jpbuspass/Buspass" extends="entando-default">
    	
    	<action name="list" class="jpbuspassBuspassFinderAction">
            <result type="tiles">jpbuspass.admin.Buspass.list</result>
        	<interceptor-ref name="entandoDefaultStack">
        		<param name="chain.includeParameters">fieldErrors,actionErrors,actionMessages</param>
        		<param name="requestAuth.requiredPermission">superuser</param>
        	</interceptor-ref>
        </action>
        
        <action name="search" class="jpbuspassBuspassFinderAction">
            <result type="tiles">jpbuspass.admin.Buspass.list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
        <action name="new" class="jpbuspassBuspassAction" method="newBuspass">
            <result type="tiles">jpbuspass.admin.Buspass.entry</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    	<action name="edit" class="jpbuspassBuspassAction" method="edit">
            <result type="tiles">jpbuspass.admin.Buspass.entry</result>
            <result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="save" class="jpbuspassBuspassAction" method="save">
        	<result name="input" type="tiles">jpbuspass.admin.Buspass.entry</result>
        	<result type="redirectAction">list</result>
        	<interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="trash" class="jpbuspassBuspassAction" method="trash">
            <result type="tiles">jpbuspass.admin.Buspass.trash</result>
        	<result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="delete" class="jpbuspassBuspassAction" method="delete">
        	<result type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    </package>
   
</struts>